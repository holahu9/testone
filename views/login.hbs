<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <title>PlusOne</title>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
</head>
<body>
      
<section style="color: white">
    <div class="container">
        <span style="color:#FF0000">L</span>
        <span style="color:#66CC66">O</span>
        <span style="color:#FF9966">G</span>
        <span style="color:#eff0f7">I</span>
        <span style="color:#FF0066">N</span>
        <!-- create a form-->
        <form action="/auth/login" method="POST">

            <!-- email-->
            <div class="form-group">
                <span class="fa fa-user"></span>
                <input type="text" class="form-control" id="email" name="email" required placeholder="Enter Your Email">
            </div>
            
            <!-- password-->
            <div class="form-group">
            <span class="fa fa-lock"></span>
            <input type="Password" class="form-control password" id="pwd" name="password" required  placeholder="Enter Your Password">
            <span class="show">SHOW</span>
            </div>
            <br>

            <!-- Forgot password-->
            <div class="pass">
                <a href="#">Forgot Password ?</a>
            </div>
            <div class="field">
            <button type="button" class="btn btn-secondary">Login</button>
            </div>
            
            <!-- login with other social accounts-->
            <div class="login">Or Login With</div>

            <div class="link">
                <div class="facebook">
                    <i class="fab fa-facebook-f"><span>Facebook</span></i>
                </div>

                <div class="instagram">
                    <i class="fab fa-instagram"><span>Instagram</span></i>
                </div>
            </div>

            <!--signup for new user-->
            <div class="signup">Don't have an account ?
                <a href="/signup">Signup Now</a>
            </div>
        </form>
    </div>

     {{#if message }}
      <h4 class="alert alert-danger mt-4">{{message}}</h4>
    {{/if}}
    
</section>

<script>
    /* Show the password*/
const pw = document.querySelector('.password');
const showpass = document.querySelector('.show');
showpass.addEventListener('click',()=>{
    if(pw.type==="password"){
        pw.type="text";
        showpass.style.color="#3498db";
        showpass.textContent="HIDE"
    }
    else {
        pw.type="password";
        showpass.style.color='#222';
        showpass.textContent="SHOW";
    }
})
</script>

</body>
</html>